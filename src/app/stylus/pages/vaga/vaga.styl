.vaga__content
    position relative
    padding-top 200px
    background-color $preto
    color $branco

.vaga__container
    display grid
    grid-template-columns 35% auto 55%
    grid-gap 5%

.vaga__title.title
    display block
    padding-right 20%
    box-sizing border-box
    color $branco
    font-size 3.6vw
    line-height 1.1
    font-weight 600

.vaga__subtitle.subtitle
    position relative
    display flex
    align-items center
    min-height 80px
    margin-top 100px
    margin-bottom 70px
    line-height 1.3
    color $branco
    font-weight 300
    font-size 1.6vw

    strong
        position absolute
        left -100px
        top -35px
        display block
        font-size 120px
        font-weight 700
        color $cinzaescuro

    &:first-child
        margin-top 0

.vaga__form
    grid-column 3/4

.vaga__action
    min-width 300px

.portfolio__item
    position relative
    display flex
    align-items flex-start
    justify-content center
    flex-direction column
    padding 100px
    min-height 400px
    margin-bottom 20px
    box-sizing border-box
    text-decoration none
    color $branco

    &:before
        content ''
        position absolute
        z-index 0
        top 0
        left 0
        square 100%
        background-color alpha($preto, 40%)
        opacity 1
        transition all 500ms ease

    &:hover
        &:before
            opacity 0

.portfolio__info
    display flex
    position relative
    margin-top 20px

.portfolio__categorias
    display flex
    text-transform uppercase

.portfolio__categoria,
.portfolio__data
    letter-spacing 6px
    font-size 11px
    font-weight 600

    &:before
        content '|'
        opacity .5
        margin 0 10px

    &:first-child:before
        display none

.portfolio__data
    &:before
        content ''
        display inline-block
        width 25px
        height 1px
        margin 0 30px
        transform translateY(-3px)
        opacity .6
        background-color $branco

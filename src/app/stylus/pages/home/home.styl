.home
    bg('home-bg.jpg')
    background-color $preto
    background-size cover
    background-position center center

.home__content
    padding 0

.home__container
    display flex
    align-items center
    justify-content space-between
    height 100vh

.home__intro
    position relative
    display flex
    justify-content space-between
    align-items center
    width 100%
    box-sizing border-box
    // font-size 60px
    font-size 2.9vw
    font-weight 600
    line-height 1.3
    color $cinza
    font-weight 700

    strong
        color $branco
        font-weight 700

    &:after
        content ''
        width 604px
        height 418px
        min-width 31vw
        margin-left 2%
        replace('triangle.png')
        background-size contain

@media $small
    .home
        height 100vh

    .home__intro
        flex-direction column-reverse
        font-size 5vw

        &:after
            width 80%
            height 50vw
            margin-bottom 10%

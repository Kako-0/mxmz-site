.projeto__content
    padding-bottom 0

.projeto__container
    padding 0 8vw
    box-sizing border-box

.projeto__header
    display flex
    align-items center
    justify-content space-between
    margin-bottom 100px

.projeto__year
    letter-spacing 19px
    font-size 20px
    font-weight 300

.projeto__intro
    margin 0 0 40px
    font-size 24px
    color $grafite
    font-weight 400

.projeto__link
    display inline-block
    font-size 30px
    font-weight 700
    color $vermelho
    text-decoration none
    line-height 1

    &:before
        height 2px

.projeto__section
    display flex
    margin-bottom 100px

    ul
        list-style none

    &:first-child
        margin-top 150px

    .projeto__subtitle
        position relative
        min-width 50%

        &:after
            content ''
            position absolute
            top 10px
            right 50px
            width 50px
            height 2px
            background-color $vermelho

.projeto__caption
    margin-bottom 50px
    letter-spacing 19px
    font-size 20px
    font-weight 300
    text-transform uppercase

.projeto__screenshot
    margin-bottom 150px

.projeto__media
    display flex
    justify-content space-between
    align-items center

    img
        max-width 100%

    &--shadow
        img
            box-shadow 0 0 40px 0 rgba(0,0,0,.15)

.projeto__footer
    background-size auto 100%
    background-position center center
    transition all 1s ease

    .container
        display flex
        align-items center
        justify-content space-between
        min-height 50vh

    &:hover
        background-size auto 105%
        cursor pointer

.projeto__nome
    color $branco

.projeto__next
    position relative
    font-size 20px
    font-weight 600
    text-decoration none

    &:after
        content ''
        position absolute
        top 7px
        left 150%
        width 80px
        height 30px
        replace('icon-arrow.svg')

.projeto__category
    text-transform uppercase
    font-size 11px
    color $branco
    letter-spacing 5px

@media $small
    .projeto__intro
        font-size 3vw

    .projeto__header
        margin-bottom 6vh

    .projeto__section
        .projeto__subtitle
            min-width 35%

            &:after
                right 20px
                width 40px

    .projeto__container
        padding 0

    .projeto__link
        font-size 18px

    .projeto__next:after
        top 35px
        left 0

    .projeto__media
        flex-direction column

    .projeto__img
        margin 0 0 5%

@media $smaller
    .projeto__year
        letter-spacing 10px
        font-size 16px

    .projeto__intro
        font-size 14px

    .projeto__sections
        margin-bottom 100px

    .projeto__section
        flex-direction column
        margin-bottom 50px

        .projeto__subtitle
            min-width 30%
            margin-bottom 30px
            font-size 14px

            &:after
                left 0
                top 30px

        &:first-child
            margin-top 100px

    .projeto__caption
        margin-bottom 30px
        font-size 16px
        letter-spacing 10px

    .projeto__screenshot
        margin-bottom 80px

    .projeto__footer .container
        flex-direction column
        justify-content center
        align-items flex-end

    .projeto__next
        margin-bottom 50px

        &:after
            left auto
            right 0

    .projeto__nome
        font-size 24px
        text-align right

    .projeto__category
        letter-spacing 3px
        font-size 10px


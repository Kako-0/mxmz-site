html,body
    width 100%
    height 100%

.wrap
    display flex
    flex-direction column
    width 100%
    height 100%

.wrap__area
    position relative
    // width 100%
    // height 100%

    &--banner
        min-height 80vh

.wrap__section
    position absolute
    width 100%
    box-sizing border-box
    clip rect(auto, auto, auto, auto)

.wrap__fixed
    position fixed
    top 0
    left 0

@media $small
    .wrap__fixed
        position absolute

    .wrap__section
        clip unset

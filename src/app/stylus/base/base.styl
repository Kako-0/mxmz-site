*::-moz-selection
    color #fff
    background alpha($cor-primaria, .8)

*::selection
    color #fff
    background alpha($cor-primaria, .8)

.body--clipping
    overflow hidden

.img--responsive
	width 100%
	height auto

body
    color $grafite
    font-size 14px
    line-height 1.92
    background-color $branco

    a.link
        position relative
        color $vermelho

        &:before
            content ""
            position absolute
            bottom 0
            left 0
            width 100%
            height 1px
            background-color $vermelho
            visibility hidden
            transform scaleX(0)
            transition all 300ms $smooth 0s

        &:hover:before
            visibility visible
            transform scaleX(1)

// typography
$font-primaria = 'Gotham', sans-serif
$font-secundaria = 'Gotham', sans-serif


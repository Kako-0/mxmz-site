.share__item--facebook
    background-color #3b5999

    &:after
        fa-icon('facebook')

    &:hover
        background-color darken(#3b5999, 30%)

.share__item--twitter
    background-color #55acee

    &:after
        fa-icon('twitter')

    &:hover
        background-color darken(#55acee, 30%)

.share__item--whatsapp
    background-color #25D366

    &:after
        fa-icon('whatsapp')

    &:hover
        background-color darken(#25D366, 30%)

.share__item--linkedin
    background-color #0077B5

    &:after
        fa-icon('linkedin')

    &:hover
        background-color darken(#0077B5, 30%)

.share__item--email
    background-color $cor-primaria

    &:after
        fa-icon('envelope')

    &:hover
        background-color darken($cor-primaria, 30%)

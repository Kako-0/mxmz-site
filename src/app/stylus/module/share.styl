.share
    display flex
    width 0
    height 40px
    z-index 12
    transition width 500ms ease
    overflow hidden

    &--active
        width 100%

.share__container
    display flex
    align-items center
    justify-content space-between
    width 288px

.share__item
    display flex
    align-items center
    justify-content center
    color $branco
    text-decoration none
    width 40px
    height 40px
    font-size 14px
    transition all 300ms ease
    // margin 0 5px


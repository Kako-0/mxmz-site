.button
    display inline-flex
    min-height 50px
    min-width 200px
    align-items center
    justify-content center
    padding 2px 30px 0
    font-size 12px
    box-sizing border-box
    border-radius 30px
    border 1px solid $cor-secundaria
    text-align center
    margin 0
    color $branco
    letter-spacing .08em
    text-transform uppercase
    text-decoration none
    font-weight 600
    cursor pointer
    background-color $cor-secundaria
    transition all 300ms ease

    &:hover
        color $branco
        border-color $cor-secundaria
        background-color $cor-secundaria

    &--secondary
        color $branco
        border-color $cor-primaria
        background-color $cor-primaria

    &--telefone
        padding-left 60px
        min-width 200px
        position relative

        &:before
            content ''
            position absolute
            top 14px
            left 10px
            square 20px
            replace('icon-telefone.svg')

        &:hover
            &:before
                bgi('icon-telefone-w.svg')

    &--telefone.button--invert,
    &--telefone.button--outline
        &:before
            bgi('icon-telefone-w.svg')

    &--invert
        color $cor-primaria
        border-color $branco
        background-color $branco

        &:hover
            color $branco
            border-color $cor-secundaria
            background-color $cor-secundaria

    &--outline
        color $branco
        border-color $branco
        background-color transparent

        &:hover
            color $branco
            border-color $cor-secundaria
            background-color $cor-secundaria

    &--loading
        pointer-events none
        background-color $grafite
        border-color $grafite
        font-size 0
        color $branco
        cursor default

        &:after
            content ''
            display block
            border 3px solid $branco
            border-bottom-color transparent
            width 22px
            height 22px
            border-radius 22px
            animation spin 1s infinite linear

    &--done
        pointer-events none
        background-color #56B949
        border-color #56B949
        font-size 0
        color $branco
        cursor default

        &:after
            fa-icon('check')
            font-size 22px

@keyframes spin
    to
        transform rotate(360deg)

@media $large
    .button
        padding-right 25px
        padding-left 25px
        min-height 45px
        min-width 170px

        &--telefone
            padding-left 40px

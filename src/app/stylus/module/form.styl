// .form

.form__header
    margin-bottom 30px
    font-size 14px

.form__body
    display grid
    grid-column-gap 20px
    grid-template-columns 1fr

.form__fields
    display grid
    grid-column-gap 20px
    grid-template-columns 1fr 1fr

.form__footer
    display flex
    justify-content space-between
    align-items center
    margin-top 30px

.form__obs
    font-size 12px
    padding-right 5%
    line-height 1.3

@media $small
    .form__fields
        grid-template-columns 1fr

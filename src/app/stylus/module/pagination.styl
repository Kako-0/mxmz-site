.pagination
    display flex
    align-items center
    justify-content center

.pagination__action
    position relative
    display block
    square 50px
    border-radius 50px
    border 1px solid $cinza2

    span
        display none

    &:first-child
        margin-right 15px

    &:before,
    &:after
        content ''
        display block
        width 3px
        height 11px
        border-radius 2px
        center()
        background-color $cor-primaria

    &:hover
        border-color $branco
        background-color $cor-secundaria

        &:before,
        &:after
            background-color $branco

.pagination__prev
    &:before
        transform rotate(45deg) translateY(-2px) translateX(-3px)
    &:after
        transform rotate(-45deg) translateY(2px) translateX(-3px)

.pagination__next
    &:before
        transform rotate(45deg) translateY(2px) translateX(3px)
    &:after
        transform rotate(-45deg) translateY(-2px) translateX(3px)

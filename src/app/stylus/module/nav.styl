.nav
    display flex
    padding 0 100px 0 0
    box-sizing border-box

.nav__list
    display flex

.nav__item
    padding 0 20px

    &--mobile
        display none

.nav__link
    position relative
    padding 10px 0
    text-transform uppercase
    font-size 11px
    color $vermelho
    letter-spacing 6px
    border-radius 5px
    font-weight 500
    font-family $font-primaria
    text-decoration none
    transition all .1s ease

    &:before
        content ""
        position absolute
        bottom 0
        left 0
        width 100%
        height 1px
        background-color $vermelho
        visibility hidden
        transform-origin 0 0
        transform scaleX(0)
        transition all 300ms $smooth 0s

    &:hover:before
        visibility visible
        transform scaleX(.95) !important

.nav__menu
    display none

.nav__close
    position absolute
    pointer-events none
    opacity 0
    transition all .15s ease
    z-index -1

.header__nav.nav--open
    &:before
        opacity 1

    .nav__list
        transform translateX(0)

    .nav__close
        z-index 29
        pointer-events auto
        opacity 1
        transition all .3s .3s ease

    .nav__menu
        opacity 0
        pointer-events none

@media $medium
    .nav
        padding 0

    .nav__social
        display none

    .nav__menu
        opacity 1
        pointer-events auto
        transition all .3s ease

    .nav__menu,
    .nav__close
        display flex
        justify-content center
        align-content center
        flex-direction column
        square 60px
        border-radius 50px

        span
            display none

    .nav__bar
        display block
        width 20px
        height 2px
        margin 3px auto
        border-radius 2px
        background-color $cor-secundaria

    .nav__close
        position fixed
        top 0
        right 0
        z-index 30
        opacity 0

        &:before,
        &:after
            content ''
            display block
            width 20px
            height 3px
            center()
            border-radius 2px
            background-color $branco
            transition all .2s ease
            pointer-events none

        &:before
            transform rotate(45deg)

        &:after
            transform rotate(-45deg)

        &:hover
            &:before
                transform rotate(0)

            &:after
                transform rotate(0)

    .header__nav
        height 60px

        .nav__list
            position fixed
            z-index 29
            top 0
            right 0
            width 100vw
            min-height 100vh
            padding 0 10%
            box-sizing border-box
            flex-direction column
            justify-content center
            background-color $cor-primaria
            background linear-gradient(212deg, $grafite 0%, $cor-primaria 99%)
            transform translateX(100vw)
            transition all .3s $smooth

        .nav__item
            display flex
            flex-direction column
            justify-content flex-start
            width 100%
            border-bottom 1px solid alpha($branco, 10%)

            &--mobile
                display flex

        .nav__link
            width 100%
            justify-content flex-start
            padding 15px 10px
            box-sizing border-box
            font-size 14px
            font-weight 400
            text-align left
            color alpha($cor-secundaria, 80%)

            &:hover
                color auto
                text-decoration none
                background none

        &.nav--open
            .nav__close
                opacity 1

